<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heng">

    <application
        android:name="com.heng.activity.UniteApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.heng.activity.NotificationActivity" />
        <activity android:name="com.heng.activity.ClockActivity" />
        <activity
            android:name="com.heng.activity.AlarmActivity"
            android:label="@string/add_alarm" />
        <activity android:name="com.heng.activity.MonthChartActivity" />
        <activity android:name="com.heng.activity.SettingActivity" />
        <activity android:name="com.heng.activity.HistoryActivity" />
        <activity android:name="com.heng.activity.AboutActivity" />
        <activity android:name="com.heng.activity.SearchActivity" />
        <activity android:name="com.heng.activity.RecordActivity" />
        <activity android:name=".activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.heng.activity.MainActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>